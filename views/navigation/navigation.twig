{% block navbar_above %}
	{% if customizer('navigation','topbar') %}
		{% include 'navigation/topbar.twig' %}
	{% endif %}
{% endblock %}

<nav id="jcore-nav" class="has-primary-background-color">
	{% block navbar %}
		{% block logo %}
			<div class="brand">
				{% include 'images/navbar-brand.twig' %}
			</div>
		{% endblock %}
		{% block menu %}
			{% include "navigation/menu.twig" with {items: menu.primary.get_items, level: 0} only %}
		{% endblock %}
		{% block search %}
			{% if customizer('navigation','search') %}
				<button id="searchbar-toggle" class="toggle-search mr-4 mr-lg-0">
					<i class="fas fa-search"></i>
				</button>
			{% endif %}
		{% endblock %}
	{% endblock %}
</nav>
{% block navbar_below %}
	{% include "partials/search.twig" %}
{% endblock %}
