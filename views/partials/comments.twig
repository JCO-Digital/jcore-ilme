<!-- comment box -->
<section
class="comment-box content-container">
<!-- comments -->
<div class="comments">
    {% if post.comments %}
        {{ comment_list }}
    {% endif %}
</div>

{% if post.comment_status == "closed" %}
    <p>{{ __('Comments for this post are closed', 'jcore') }}</p>
{% else %}
    <!-- comment form -->
    {{ fn('comment_form') }}
{% endif %}
</section>