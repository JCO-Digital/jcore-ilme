{
  "name": "jcore-ilme",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "esbuild": "esbuild --bundle src/js/*.?s --outdir=dist/js --minify --sourcemap",
    "postcss": "postcss src/css/*.css --dir dist/css",
    "tailwind": "tailwindcss -i src/tailwind.css -o dist/css/tailwind.css",
    "watch-esbuild": "npm run esbuild -- --watch",
    "watch-postcss": "npm run postcss -- --watch",
    "watch": "concurrently --kill-others 'npm run watch-esbuild' 'npm run watch-postcss'",
    "build": "npm run esbuild && npm run postcss",
    "prettier": "prettier --write src"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.7",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-minify": "^1.1.0",
    "postcss-mixins": "^9.0.4",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
